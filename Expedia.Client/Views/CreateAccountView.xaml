            <TextBlock Text="Create an Account" Grid.Row="0"
                   Margin="0,0,0,25"
				   Style="{StaticResource PivotPageHeaderStyle}"
				   x:Uid="CreateAccount"/>
            <TextBlock Text="First Name" Grid.Row="1"
					   Style="{StaticResource LocationHeaderStyle}"
					   x:Uid="FirstName" />
            <TextBox Text="{Binding FirstName, Mode=TwoWay}" Grid.Row="2"
				 Margin="0,0,0,20"/>
            <!--BorderBrush="{Binding [FirstNameValid], Converter={StaticResource BoolBorderValidationConverter}}"-->
            <TextBlock Text="Last Name" Grid.Row="3"
					   Style="{StaticResource LocationHeaderStyle}"
					   x:Uid="LastName" />
            <TextBox Text="{Binding LastName, Mode=TwoWay}" Grid.Row="4"
				 Margin="0,0,0,20"/>
            <TextBlock Text="Email Address" Grid.Row="5"
					   Style="{StaticResource LocationHeaderStyle}"
					   x:Uid="EmailAddress" />
            <TextBox Text="{Binding Email, Mode=TwoWay}" Grid.Row="6"
				 Margin="0,0,0,20"
                 IsSpellCheckEnabled="False"
				 InputScope="EmailSmtpAddress"/>

            <!--<TextBlock Text="*Email format is invalid."  
                   Margin="0,-18,0,0"
                   Visibility="{Binding [IsEmailValid], Converter={StaticResource BooleanToVisibilityConverter}}"
                   Style="{StaticResource LocationHeaderStyle}"
                   uloc:Localize="Text"
                   x:Uid="EmailInvalidError"
                   Foreground="Red"/>-->

            <TextBlock Text="Password" Grid.Row="7"
					   Style="{StaticResource LocationHeaderStyle}"
					    x:Uid="EnterPassword"/>
            <PasswordBox Margin="0,0,0,20" Grid.Row="8"
					 Password="{Binding Password, Mode=TwoWay}"
					/>

            <!--<TextBlock Text="*Minimum password length not met." 
                   Margin="0,-18,0,0"
                   Visibility="{Binding [PasswordsLengthMet], Converter={StaticResource BooleanToVisibilityConverter}}"
                   Style="{StaticResource LocationHeaderStyle}"
                   uloc:Localize="Text"
                   x:Uid="PasswordLengthError"
                   Foreground="Red"/>-->

            <TextBlock Text="Confirm Password" Grid.Row="9"
					   Style="{StaticResource LocationHeaderStyle}"
					   x:Uid="ConfirmPassword" />

            <PasswordBox Margin="0,0,0,20" Grid.Row="10"
					 Password="{Binding ConfirmPassword, Mode=TwoWay}"
					/>

            <TextBlock Text="*Passwords do not match."  Grid.Row="11"
                   Margin="0,-18,0,0"
                   Visibility="{Binding PasswordsMatch, Converter={StaticResource ReversedBoolToVisibilityConverter}}"
                   Style="{StaticResource LocationHeaderStyle}"
                   x:Uid="PasswordMatchError"
                   Foreground="Red"/>

            <CheckBox BorderBrush="Black" IsChecked="{Binding EmailOptIn, Mode=TwoWay}" Grid.Row="12" Margin="0 15 0 0">
                <TextBlock
                TextWrapping="Wrap"  
                Text="Please send me Expedia.com emails with travel deals, special offers, and other information."
                x:Uid="EmailOptIn"
                Style="{StaticResource LocationHeaderStyle}">
                </TextBlock>
            </CheckBox>

            <CheckBox BorderBrush="Black" IsChecked="{Binding TermsAgreed, Mode=TwoWay}" Grid.Row="13" Margin="0 15 0 0">
                <TextBlock
                TextWrapping="Wrap"  
                Style="{StaticResource LocationHeaderStyle}">
                I have read and agree to the
                <Hyperlink
                    NavigateUri="https://www.expedia.com/p/info-other/legal.htm">Terms of Use</Hyperlink>
                and the
                <Hyperlink NavigateUri="https://www.expedia.com/p/info-other/privacy-policy.htm"> Privacy Policy.</Hyperlink>
                </TextBlock>
            </CheckBox>

            <Button Content="Create Account" Grid.Row="14"
				Command="{Binding CreateAccount}"
				Margin="0,30,0,30"
				x:Uid="CreateAccountButton"
				Style="{StaticResource SearchButtonStyle}" />


        </Grid>
        <ProgressRing x:Name="ProgressRing" Margin="0 0 0 400" IsActive="{Binding IsBusy, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Visibility="{Binding ElementName=ProgressRing, Path=IsActive, Converter={StaticResource BoolToVisibilityConverter}}" Width="100" Height="100" />
    </Grid>
</Page>
