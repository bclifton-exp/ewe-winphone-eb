                        </TextBlock>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="customControls:SearchResultItemControl"
		   BasedOn="{StaticResource DefaultResultItemControlStyle}">
    </Style>

</ResourceDictionary>
