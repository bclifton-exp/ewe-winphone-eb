                                        </ObjectAnimationUsingKeyFrames>
                                        <DoubleAnimation Storyboard.TargetName="PART_ExpandButton"
														 Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.CenterY)"
														 Duration="0"
														 To="1" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Expanded">
